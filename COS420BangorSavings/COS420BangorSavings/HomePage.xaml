<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="COS420BangorSavings.HomePage">


    <ScrollView>

        <StackLayout>
            <StackLayout VerticalOptions="Start">
				<Image Source="Homepage_logo.png"/>
            </StackLayout>

			<StackLayout VerticalOptions="CenterAndExpand">
    			<!-- middle controls -->
  			</StackLayout>

			<StackLayout VerticalOptions="End">
				<Button x:Name="Home" Text="Home" TextColor="White" BackgroundColor="#127ac7"/>
				<Button x:Name="Voting" Text="Voting" TextColor="White" BackgroundColor="#127ac7"/>
				<Button x:Name="Leaderboards" Text="Leaderboards" TextColor="White" BackgroundColor="#127ac7"/>
    			<Image Source="Bottom_navbar.png"/>
  			</StackLayout>
		</StackLayout>
		
    </ScrollView>
</ContentPage>