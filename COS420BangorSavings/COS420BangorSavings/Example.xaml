<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="COS420BangorSavings.Example">

  <StackLayout Padding="20">
    <Label Text="Bangor Savings Bank" TextColor="Navy" FontSize="28"></Label>
    <Label Text="Login" TextColor="Black" FontSize="18"></Label>
    <Label Text="" TextColor="Black" FontSize="18"></Label>
    <Entry x:Name="txtUname" Placeholder="Type Username" ></Entry>
    <Entry x:Name="txtPassword" Placeholder="Type Password" ></Entry>
    <StackLayout Orientation="Horizontal">
      <Button BackgroundColor="Gray" TextColor="White" Text="Cancel" Clicked="OnCancel"/>
      <Button BackgroundColor="Blue" TextColor="White" Text="Login" Clicked="OnLogin"/>
    </StackLayout>

  </StackLayout>
  
  
</ContentPage>